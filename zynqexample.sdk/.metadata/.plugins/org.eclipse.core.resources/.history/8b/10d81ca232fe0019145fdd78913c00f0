#ifndef SRC_MEMTEST_CONTROLLER_H_
#define SRC_MEMTEST_CONTROLLER_H_

#define MEMORY_BASE_ADDRESS XPAR_PS7_DDR_0_S_AXI_BASEADDR
#define MEMORY_END_ADDRESS XPAR_PS7_DDR_0_S_AXI_HIGHADDR

#define MEMORY_TEST_WORDCOUNT 128
#define MEMORY_STOPTEST_ADDRESS 0x00100000 + sizeof(unsigned int)*MEMORY_TEST_WORDCOUNT

#define PRINT_VERBOSE TRUE

char memtest_cfg_printVerbose = TRUE;
unsigned int memtest_cfg_wordCount = 128;
unsigned int memtest_cfg_stopAddress = MEMORY_BASE_ADDRESS + sizeof(unsigned int)*memtest_cfg_wordCount;

#endif /* SRC_MEMTEST_CONTROLLER_H_ */
